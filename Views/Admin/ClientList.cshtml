@model IEnumerable<AvukatSistemi.Models.Client>

@{
    ViewData["Title"] = "Tüm Müvekkiller";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-people-fill me-2"></i>@ViewData["Title"]</h2>
        <a asp-action="CreateClient" class="btn btn-success">
            <i class="bi bi-person-plus-fill me-1"></i>Yeni Müvekkil Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            Henüz kayıtlı müvekkil bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>İsim</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th style="width:150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Name</td>
                        <td>@client.Email</td>
                        <td>@client.Phone</td>
                        <td>
                            <a class="btn btn-sm btn-outline-info me-1" title="Detay" href="@Url.Action("ClientDetails", "Admin", new { id = client.Id })">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <form asp-action="DeleteClient" method="post" asp-route-id="@client.Id" class="d-inline" onsubmit="return confirm('Müvekkili silmek istediğinize emin misiniz?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
