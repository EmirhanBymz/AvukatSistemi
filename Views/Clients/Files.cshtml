@model List<AvukatSistemi.Models.CaseFile> 
@{
    ViewData["Title"] = "Dosyalarım";
}

<h2>Dosyalarım</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Henüz dosya bulunmamaktadır.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Dosya Açıklaması</th>
                <th>Durum</th>
                <th>Dosya</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Description</td>
                    <td>
                        @file.Status.ToString()
                        <br />
                    </td>
                    <td>
                        <a href="@Url.Action("DownloadFile", "Clients", new { id = file.Id })">İndir</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
 }